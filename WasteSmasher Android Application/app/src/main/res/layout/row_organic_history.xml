<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".OrganicRequestHistory"
    android:padding="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/display_img_hist"
                android:layout_width="0px"
                android:layout_height="300px"
                android:padding="10px"
                android:layout_weight="2"
                android:src="@drawable/plastic"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/display_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topic of Waste"
                    android:textSize="23dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status : "
                        android:textSize="17dp"
                        android:paddingTop="6dp"/>
                    <TextView
                        android:id="@+id/display_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- Request Send"
                        android:textSize="17dp"
                        android:paddingTop="6dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/display_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:text="- Krishna nagar lane no 19 Roorkee"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>