<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/postDP"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:padding="1dp"
        android:layout_margin="6dp"
        app:layout_constraintBottom_toTopOf="@+id/postCity"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#F5F5F5"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@+id/postTittle"
        android:src="@drawable/user_profile" />


    <EditText
        android:id="@+id/postTittle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/pop_up_style"
        android:ems="10"
        android:hint="Tittle"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/postDP"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/discriptionPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/pop_up_style"
        android:ems="10"
        android:hint="Discription"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/postDP"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postCity" />

    <ImageView
        android:id="@+id/imagePost"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/testing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discriptionPost" />

    <ImageView
        android:id="@+id/postImageUpload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/style_camera_bg"
        android:padding="10dp"
        android:elevation="35dp"
        app:layout_constraintEnd_toEndOf="@+id/imagePost"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="@+id/imagePost"
        app:layout_constraintTop_toTopOf="@+id/imagePost"
        app:srcCompat="@drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/postCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/pop_up_style"
        android:ems="10"
        android:hint="City"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/discriptionPost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postTittle"
        app:layout_constraintVertical_bias="0.242" />

    <Button
        android:id="@+id/addPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_drawable"
        android:text="ADD POST"
        android:elevation="35dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePost"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/postProgressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_profile"
        android:padding="5dp"
        android:elevation="35dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePost"
        app:layout_constraintVertical_bias="0.018" />


</androidx.constraintlayout.widget.ConstraintLayout>